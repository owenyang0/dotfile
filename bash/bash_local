export GRADLE_HOME
export PATH=$PATH:$GRADLE_HOME/bin

# mysql config
export PATH=$PATH:/usr/local/mysql/bin

# psql config
export PATH=$PATH:/Applications/Postgres.app/Contents/Versions/9.3/bin

export PATH=$PATH:~/.opt/apache-tomcat-7.0.54/bin
